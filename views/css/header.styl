#global-bar
	box-shadow: #e5e3df 0px 0px 30px;
	padding-bottom: 1em;
	padding-top: 1em;
	position: fixed;
	width: 100%;
	background-color: white;
	z-index: 100;


	div.wrapper
		position: relative;
		div.right
			bottom: 0;
			position: absolute;
			right: 4%;
	ul > li > a
		&:active,
		&:focus
			background: #777571;
			border-color: #777571;
			color: #ffffff;
				
	ul
		float: left;
		li
			float: left;
			margin-right: 0.5em;
			position: relative;
			a
				border-radius: 3px;
				color: #000000;
				font-size: 1em;
				padding: 0.3em 1em 0.3em 1em;
				cursor: pointer;
		
	ul	
		li.selected > a
			background: #777571;
			border-color: #777571;
			color: #ffffff;

		li.dropdown
			
			> a:after
				color: #acaaa7;
				icon-down-open-mini()			
				float: right;
				font-family: "Entypo";
				font-size: 120%;
				margin-left .5em
				height 1em

			ul
				font-weight 300
				position: absolute;
				display: none;
				border: solid #F4F1ED 2px;
				background-color: #ffffff;
				margin-top: 3px;	
				border-radius: 5px;	
				width: 16em;
				font-size: 1em;

				li
					clear: both;
					background: #ffffff !important;
					
				& a
					padding 0em 0em 0.8em 1.5em;
					width 100%;
					color: #acaaa7;

					&:focus, &:hover
						background-color: #ffffff;
						color: #000000;	

			img
				height 2em
				padding 0 0 0.4em 0
			span
				padding .4em .6em
				font-size .8em

		li.dropdown.opened ul
			display: block;

body.mootools #global-bar
	padding-bottom: 2em;
	padding-top: 2em;
	h1
		padding: 0;

#logo
	float: left;
	h1 img
		height: 70px !important;
	p img
		height: 27px;
		padding: 0.5em;

#search
	float: left;
	margin-left: 0.5em;
	label
		display: block;
		position: relative;

	input
		background: transparent;
		border-color: #e5e3df;
		display: block;
		font-size: 0.8em;
		font-weight: 400;
		padding: 0.4em 0.5em;
		&:focus
			border-color: #acaaa7;


#header
	border-bottom: solid #777571 1px;
	margin-top: 40px;
	h1 img
		height: 90px;
		width: auto;

	a
		color: #acaaa7;
		font-size: 1.125em;
		&:active,
		&:focus
			background: transparent;
			span
				background: #777571;
				border-radius: 3px;

body.mootools
	#header
		margin-top: 0px;
	#global-bar
		position: relative;